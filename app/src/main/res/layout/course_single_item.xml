<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="ie.ncirl.jordandaly.classdoor.CourseSingleItem">

        <include
            android:id="@+id/toolbar_main"
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/course_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_main"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/mode_of_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_description"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/caocodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mode_of_study"
        android:text="CAO Code: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cao_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mode_of_study"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/caocodeLabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qualificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caocodeLabel"
        android:text="Qualification: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/qualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caocodeLabel"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/qualificationLabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nfqLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qualification"
        android:text="NFQ Level: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nfq_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qualification"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/nfqLevelLabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nfqLevelLabel"
        android:text="Duration: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nfqLevelLabel"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/durationLabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/courseLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/durationLabel"
        android:text="Course Level: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/course_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/durationLabel"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/courseLevelLabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseLevelLabel"
        android:text="Fees: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseLevelLabel"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/feesLabel"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/departmentFacultyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feesLabel"
        android:text="Department/Faculty: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/department_faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fees"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/departmentFacultyLabel"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/avgratinglabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/department_faculty"
        android:text="@string/avgratinglabel"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/avg_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/department_faculty"
        android:layout_toRightOf="@+id/avgratinglabel"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/revcountlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avgratinglabel"
        android:text="@string/revcountlabel"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rev_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avg_rating"
        android:layout_toRightOf="@+id/revcountlabel"
        android:textSize="20sp" />
        

        <com.dd.processbutton.FlatButton
        android:id="@+id/reviewsButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rev_count"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
            android:drawableLeft="@drawable/list_white_small_icon"
        android:text="Course Reviews List"
        android:textColor="@android:color/white"
        custom:pb_colorNormal="@android:color/holo_orange_light"
        custom:pb_colorPressed="@android:color/holo_orange_dark" />


    <com.dd.processbutton.FlatButton
        android:id="@+id/addNewReviewButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewsButtonId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_action_new_white_small"
        android:text="Add New Course Review"
        android:textColor="@android:color/white"
        custom:pb_colorNormal="@android:color/holo_green_light"
        custom:pb_colorPressed="@android:color/holo_green_dark" />


</RelativeLayout>
    </ScrollView>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>